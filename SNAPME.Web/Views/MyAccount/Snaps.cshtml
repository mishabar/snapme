@model SNAPME.Web.Models.Account.MyAccountSnapsModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Snaps";
}

<div class="container-fluid white-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                @Html.Partial("_AccountMenu", Model)
            </div>
            <div class="col-md-9">
                <h3 class="text-center">SNAPS</h3>
                <hr />
                @if (!Model.Snaps.Any())
                {
                    <div class="text-center">
                        <h4>Hi @((User.Identity as System.Security.Claims.ClaimsIdentity).Name)! You've yet to snap a product!</h4>
                        <h5>Check out our <a href="/">Sales Page</a> and start snapping today!</h5>
                        <div>
                            Not sure how it works? Check out our <a href="/Home/FAQ">FAQ</a>?
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        @foreach (var item in Model.Snaps)
                        {
                            <div class="col-md-4 sale featured-sale">
                                @Html.Partial("_TinyProduct", item)
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

