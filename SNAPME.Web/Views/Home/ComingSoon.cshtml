@{
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";
    ViewBag.Title = "Coming Soon";
    ViewBag.ComingSoon = true;
}

<div class="coming-soon">
    <div class="top-banner">
        <div class="container">
            <h2 class="text-center text-uppercase">How to save money shopping online?</h2>
            <div class="col-md-10 col-md-offset-1">
                <h4>iiSnap is a social shopping site that lets members drop the price of the products they like by raising the demand using their social network</h4>
                <h4 class="yellow hidden-sm hidden-xs">we are launching very soon</h4>
                <br class="hidden-sm hidden-xs" />
                <h4>
                    How does it work?<br />
                    <a href="#"><i class="fa fa-play-circle"></i></a>
                    <span class="yellow">Press play now</span>
                </h4>
            </div>
        </div>
    </div>
    <div class="early-birds">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="stay-tuned text-center">
                        <h2>Stay Tuned!</h2>
                        <div>unlock awesome rewards</div>
                        <div class="arrow"></div>
                    </div>
                    <h2>Early Birds Special</h2>
                    <p>Get exclusive invitation to our pre-launch sales and get additional <span style="text-decoration: underline" data-toggle="popover" data-trigger="hover" data-placement="top">Snap Points</span> to get you started.</p>
                    <div class="row">
                        <form method="post" action="/Account/EarlyBird">
                            <div class="form-group">
                                <div class="col-sm-8">
                                    <input type="email" name="email" class="form-control" placeholder="Email Address" />
                                </div>
                                <div class="col-sm-4">
                                    <button class="btn btn-block btn-snapme">Let me know</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sharing-saving">
        <div class="container">
            <div class="row">
                <div class="col-md-12 social-map">
                    <h2>Sharing is Saving</h2>
                    <h4>iiSnap is the world most rewarding social shopping experience</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="benefits">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 text-center">
                    <i class="iisnap-drop"></i>
                    <div>Drop the price and save on anything you buy</div>
                </div>
                <div class="col-sm-4 text-center">
                    <i class="iisnap-computeriisnap"></i>
                    <div>A fun and rewarding way to shop online with your friends</div>
                </div>
                <div class="col-sm-4 text-center">
                    <i class="iisnap-letter"></i>
                    <div>Invite your friends and earn Snap Points</div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="special-invite">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <h2>Pre-Launch Special Invite</h2>
                    <p>Get exclusive invitation to our pre-launch sales and get additional <span style="text-decoration: underline" data-toggle="popover" data-trigger="hover" data-placement="top">Snap Points</span> to get you started.</p>
                    <div class="row">
                        <form method="post" action="/Account/EarlyBird">
                            <div class="form-group">
                                <div class="col-sm-8">
                                    <input type="email" name="email" class="form-control" placeholder="Email Address" />
                                </div>
                                <div class="col-sm-4">
                                    <button class="btn btn-block btn-snapme">Let me know</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $("[data-toggle=popover]").popover({ html: true, content: "<p class='text-center'>Snap Points are part of the iiSnap reward program.<br/>You can earn Snap Points when friends whom you invited to a sale buy the product.<br/>Snap Point can be used for discounts during any sale on the site." });
            $("body").css("margin-bottom", $("footer").height() + 40 + "px");
        });
    </script>
}