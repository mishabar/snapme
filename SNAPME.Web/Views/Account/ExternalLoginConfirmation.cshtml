@model SNAPME.Web.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <h3 class="center-align">Complete your @ViewBag.LoginProvider registration</h3>
    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true)
        <p class="text-center">
            <br />
            You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.<br />
            Please verify your <strong>Email</strong> and click the <strong>Register</strong> button to finish logging in.
            <br /><br />
        </p>
        <div class="input-field">
            @Html.TextBoxFor(m => m.Email, new { @class = "validate" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="input-field">
            <button type="submit" class="waves-effect waves-light btn yellow accent-4">Register</button>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $("body").css("background-color", "#fff");
        });
    </script>
}
