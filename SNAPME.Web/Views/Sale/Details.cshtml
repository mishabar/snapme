@model SNAPME.Tokens.SaleToken
@using SNAPME.Web.Core;
@{
    ViewBag.Title = Model.product.name;
    Layout = "~/Views/Shared/_Layout.cshtml";
    int complete = 0;
}

<div class="container">
    <div class="row product">
        <div class="col-md-8">
            <h4 class="title text-center">Bose SoundLink Mini Bluetooth Speaker</h4>
        </div>
        <!-- Details -->
        <div class="col-sm-8">
            <div class="row images">
                <div class="col-sm-2">
                    <ul>
                        <li>
                            <div class="image-sm embed-responsive embed-responsive-16by9" style="background-image: url(https://www.bose.co.uk/GLOBAL/Images/000000000000060933_660x460.jpg); background-position: center center; background-repeat: no-repeat;background-size:contain;">
                            </div>
                        </li>
                        <li>
                            <div class="image-sm embed-responsive embed-responsive-16by9" style="background-image: url(https://www.bose.co.uk/GLOBAL/Images/000000000000060933_660x460.jpg); background-position: center center; background-repeat: no-repeat;background-size:contain;">
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-10">
                    <div class="image-lg embed-responsive embed-responsive-16by9" style="background-image: url(https://www.bose.co.uk/GLOBAL/Images/000000000000060933_660x460.jpg); background-position: center center; background-repeat: no-repeat;background-size:contain;">
                        <div class="snaps-flag text-center">
                            <div>360</div>
                            SNAPS
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="sale-info">
                <div class="price-range">
                    <div class="price-bubble price-bubble-left pull-left">@Model.product.retail_price.AsPrice()</div>
                    <div class="price-bubble price-bubble-right pull-right">@Model.target_price.AsPrice()</div>
                    <div class="clearfix"></div>
                    <div class="progress">
                        @{
                            complete = 100 * (Model.product.retail_price - Model.current_price) / (Model.product.retail_price - Model.target_price);
                        }
                        <div class="progress-bar" role="progressbar" aria-valuenow="@complete" aria-valuemin="0" aria-valuemax="100" style="width: @complete%;">
                            <span class="sr-only">@complete% Complete</span>
                        </div>
                        <div class="progress-indicator" style="left: 60%;">
                        </div>
                    </div>
                </div>
                <hr />
                @if (Model.ends_on < DateTime.UtcNow)
                {
                    <div class="current-price text-center">
                        <div>CLOSED AT</div>
                        <div class="final value">@Model.current_price.AsPrice()</div>
                    </div>
                    <div class="actions">
                        <a href="/#active-sales" class="btn btn-block bln-lg no-logo btn-snapme">Go to Active Sales</a>
                    </div>
                }
                else
                {
                    <div class="retail">RETAIL PRICE<span class="pull-right">@Model.product.retail_price.AsPrice()</span></div>
                    <hr />
                    <div class="current-price text-center">
                        <div>CURRENT PRICE</div>
                        <div class="value">@Model.current_price.AsPrice()</div>
                    </div>
                    <div class="actions">
                        <button type="button" data-action="price-drop" data-id="@Model.id" class="btn btn-block bln-lg btn-snapme">Drop The Price</button>
                    </div>
                    <div class="timer">
                        <i class="ti ti-timer pull-left"></i>
                        <div>@Model.ends_on.AsTimeToEnd()</div>
                    </div>
                }
            </div>
            <div class="share-bar">
                <a><i class="fa fa-facebook"></i></a>
            </div>
        </div>
    </div>
</div>
