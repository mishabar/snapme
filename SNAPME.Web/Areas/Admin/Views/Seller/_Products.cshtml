@model IEnumerable<SNAPME.Tokens.ProductToken>


<div class="text-right">
    <a data-toggle="modal" href="#mdlProduct" data-entity="product" data-id="" class="btn btn-default pull-right" title="Create Product"><i class="fa fa-cube"></i></a>
</div>
<table class="table table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th style="width: 50%;">Short Description</th>
            <th>Images</th>
            <th>RRP</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td><a data-toggle="modal" href="#mdlProduct" data-entity="product" data-id="@product.id">@product.name</a>&nbsp;<a href="/Product/@product.id" target="_blank" title="View on site"><i class="fa fa-eye"></i></a></td>
                <td>@product.category</td>
                <td>@product.short_descritpion</td>
                <td>
                    @if (product.images != null && product.images.Any(img => !string.IsNullOrWhiteSpace(img)))
                    {
                        <i class='fa fa-image'></i>
                    }
                </td>
                <td>@product.retail_price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="mdlProduct" tabindex="-1" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content"></div>
    </div>
</div>

@Html.AntiForgeryToken()

@section scripts
{
    @Scripts.Render("~/bundles/admin")
}