<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Angular Material style sheet -->
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/angular_material/1.0.7/angular-material.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha256-3dkvEK0WLHRJ7/Csr0BZjAWxERc5WH7bdeUya2aXxdU= sha512-+L4yy6FRcDGbXJ9mPG8MT/3UCDzwR9gPeyFNMCtInsol++5m3bk2bXWKdZjvybmohrAsn3Ua5x8gfLnbE1YkOg=="
          crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,500,700' rel='stylesheet' type='text/css'>
    <link href="~/Content/lf-ng-md-file-input.css" rel="stylesheet" />

    @RenderSection("head", false)
    <link rel="stylesheet" type="text/css" href="~/content/style.min.css" />

    <link rel="icon" href="~/content/images/favicon.png">
    <title>iiSnap - Seller Portal</title>
</head>
<body ng-app="IISNAP" ng-cloak ng-controller="MainController">
    <header>
        <md-toolbar style="background-color: #fff;color: #000; border-bottom: 1px solid #ccc;">
            <div style="width: 100%;margin: 0 auto;">
                <div class="md-toolbar-tools md-accent">
                    <md-button class="md-icon-button" ng-click="openMenu()" hide-gt-md aria-label="Toggle Menu">
                        <md-icon class="material-icons" style="color: #000;">menu</md-icon>
                    </md-button>
                    <a href="/Portal">
                        <img src="~/content/images/logo.png" />
                    </a>
                    <span style="margin: -5px 0 0 20px;">&nbsp;for Merchants</span>
                    <span class="flex"></span>
                </div>
            </div>
        </md-toolbar>
    </header>

    <main layout="row">
        <md-sidenav class="md-sidenav-left " md-component-id="sidenav-left" md-is-locked-open="$mdMedia('gt-md')">
            <div layout-padding>
                <h2 style="text-align: center">Account Name</h2>
            </div>
            <md-content layout-padding flex>
                <ul>
                    <li><md-button style="display: block" href="/Products">Products</md-button></li>
                    <li><md-button style="display: block" href="/Sales/Live">Live Sales</md-button></li>
                    <li><md-button style="display: block" href="/Sales/Schedule">Scheduled Sales</md-button></li>
                    <li><md-button style="display: block" href="/Sales/Ended">Ended Sales</md-button></li>
                    <li><md-button style="display: block" href="/Snapbox">SnapBox</md-button></li>
                    <li>&nbsp;</li>
                    <li><md-button style="display: block" href="/Settings">Settings</md-button></li>
                </ul>
            </md-content>
            <div layout-padding layout-align="center none">iiSnap @DateTime.Now.Year. All rights reserved.</div>
        </md-sidenav>
        <md-content flex layout-padding layout="column" class="main-content">
            @RenderBody()
        </md-content>
    </main>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>

    <!-- Angular Material requires Angular.js Libraries -->
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-cookies.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-route.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-sanitize.min.js"></script>

    <!-- Angular Material Library -->
    <script src="http://ajax.googleapis.com/ajax/libs/angular_material/1.0.7/angular-material.min.js"></script>


    <script type="text/javascript" src="//cdn.tinymce.com/4/tinymce.min.js"></script>

    <script type="text/javascript" src="~/Scripts/External/lf-ng-md-file-input.js"></script>
    <script type="text/javascript" src="~/Scripts/External/tinymce.min.js"></script>
    <script type="text/javascript" src="~/Scripts/App/services.js"></script>
    <script type="text/javascript" src="~/Scripts/External/validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/App/app.js"></script>
    <script type="text/javascript" src="~/Scripts/App/controllers.js"></script>
</body>
</html>
